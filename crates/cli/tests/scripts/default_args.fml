function def_args(a=1, b=2) {
	return a + b;
}

assert(def_args() == 3);
assert(def_args(2) == 4);
assert(def_args(2, 3) == 5);

var def_args_lambda = function(a=2, b=3) {
	return a + b;
};

assert(def_args_lambda() == 5);
assert(def_args_lambda(3) == 6);
assert(def_args_lambda(3, 4) == 7);

var side_effect = function() {
	static num_side_effects = 0;
	num_side_effects += 1;	
	return num_side_effects;
};

var def_args_call = function(param=side_effect()) {
	return param;
};

assert(def_args_call() == 1);
assert(def_args_call() == 2);
assert(def_args_call(10) == 10);
assert(def_args_call(20) == 20);
assert(def_args_call() == 3);

return true;
